{
    "twitter": {
        "extendedMode": true
    },
    "tweetwall": {
        "query": "#devoxx",
        "title": "The JavaFX Exhibition Tweetwall for Devoxx PL 2018!",
        "stylesheetResource": "tweetwall.css"
    },
    "stepEngine": {
        "steps": [
            {
                "stepClassName": "org.tweetwallfx.devoxx.cfp.stepengine.steps.UpdateScheduleResults",
                "config": {
                    "initialOffset": 5,
                    "updateInteval": 15
                }
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx18pl.exhibition.DevoxxShowSchedule"
            },
            {
                "stepClassName": "org.tweetwallfx.devoxx18pl.exhibition.DevoxxFlipOutSchedule"
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.FadeInCloudStep"
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.NextTweetStep"
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.AddTweetToCloudStep"
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.CloudToCloudStep"
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.CloudToTweetStep"
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.PauseStep",
                "config": {
                    "amount": 5,
                    "unit": "SECONDS"
                }
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.TweetToCloudStep"
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.CloudFadeOutStep"
            },
            {
                "stepClassName": "org.tweetwallfx.controls.steps.ImageMosaicStep"
            }
        ]
    }
}
